                <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
                    <div class="feature-card p-8 rounded-lg">
                        <h3 class="text-xl font-semibold mb-6 text-blue-300">Informações de Contato</h3>
                        <div class="space-y-4">
                            <div class="flex items-center">
                                <i class="fas fa-map-marker-alt text-blue-400 mr-3"></i>
                                <div>
                                    <p class="font-semibold">Endereço:</p>
                                    <p class="text-gray-400">R. Francisco Nunes, 425<br>Jardim da Serra, Cabreúva - SP<br>CEP: 13315-000</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-phone text-blue-400 mr-3"></i>
                                <div>
                                    <p class="font-semibold">Telefones:</p>
                                    <p class="text-gray-400">
                                        <a href="tel:+5511947413471" class="hover:text-blue-300">(11) 94741-3471</a> - Insulfilme<br>
                                        <a href="tel:+5511947870409" class="hover:text-blue-300">(11) 94787-0409</a> - Outros Serviços
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-building text-blue-400 mr-3"></i>
                                <div>
                                    <p class="font-semibold">CNPJ:</p>
                                    <p class="text-gray-400">12.127.482/0001-24</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="feature-card p-8 rounded-lg">
                        <h3 class="text-xl font-semibold mb-6 text-blue-300">Horário de Funcionamento</h3>
                        <div class="space-y-3">
                            <div class="flex justify-between">
                                <span>Segunda a Sexta:</span>
                                <span class="text-blue-400">8:00 - 17:00</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Sábado:</span>
                                <span class="text-blue-400">8:00 - 12:00</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Domingo:</span>
                                <span class="text-gray-400">Fechado</span>
                            </div>
                        </div>
                        <div class="mt-8">
                            <button onclick="openModal()" class="w-full bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg flex items-center justify-center transform hover:scale-105 transition-all duration-300">
                                <i class="fab fa-whatsapp mr-2"></i>
                                Fale Conosco pelo WhatsApp
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="bg-black/50 py-8">
            <div class="container mx-auto px-4 text-center">
                <h3 class="text-2xl font-bold text-blue-500 mb-2">INEDITUS AUTOVIDRO LTDA</h3>
                <p class="text-gray-400 mb-4">Especialistas em Insulfilme e Serviços Automotivos</p>
                <p class="text-sm text-gray-500">
                    © 2024 Ineditus Autovidro. Todos os direitos reservados.<br>
                    R. Francisco Nunes, 425 - Jardim da Serra, Cabreúva - SP | CNPJ: 12.127.482/0001-24
                </p>
            </div>
        </footer>

        <!-- Modal -->
        <div id="serviceModal" class="fixed inset-0 bg-black bg-opacity-80 hidden flex items-center justify-center z-50">
            <div class="bg-dark-blue rounded-lg p-8 max-w-sm w-full mx-4 border border-blue-500/30">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="text-2xl font-bold text-blue-400">Selecione o Serviço</h3>
                    <button onclick="closeModal()" class="text-gray-400 hover:text-white">
                        <i class="fas fa-times text-xl"></i>
                    </button>
                </div>
                <div class="space-y-4">
                    <button onclick="selectService('insulfilm')"
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white px-6 py-4 rounded-lg flex items-center justify-center transform hover:scale-105 transition-all duration-300">
                        <i class="fab fa-whatsapp mr-3 text-xl"></i>
                        <div class="text-left">
                            <div class="font-semibold">Insulfilme</div>
                            <div class="text-sm opacity-75">Películas automotivas, residenciais e comerciais</div>
                        </div>
                    </button>
                    <button onclick="selectService('others')"
                        class="w-full bg-green-600 hover:bg-green-700 text-white px-6 py-4 rounded-lg flex items-center justify-center transform hover:scale-105 transition-all duration-300">
                        <i class="fab fa-whatsapp mr-3 text-xl"></i>
                        <div class="text-left">
                            <div class="font-semibold">Outros Serviços</div>
                            <div class="text-sm opacity-75">Vidros, travas, alarmes e mais</div>
                        </div>
                    </button>
                </div>
            </div>
        </div>
